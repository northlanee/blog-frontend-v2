{
  "compilerOptions": {
    "target": "esnext",
    "isolatedModules": true,
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
